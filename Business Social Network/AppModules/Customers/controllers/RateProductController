module.exports = function(app, route, express) {
module.require ='ProductsModel';
    //rate a product
    app.get('/rateProducts', function(req, res){
    });



    app.addRating('/rateProducts/:productName',function (req,res) {
        var rating = req.body.Rating;
        var productName= req.body.ProductName;
        app.models.ProductSchema.find({ProductName: productName}).$push({Rating:rating});


    });
    return function(req, res, next) {
        next();
    };

};



